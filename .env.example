# RSAS Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_ORGANIZATION_ID=your_org_id_here  # Optional

# Database Configuration
RSAS_DATABASE_URL=sqlite+aiosqlite:///database/rsas.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/rsas

# Environment
RSAS_ENV=development  # development, staging, production

# Logging
RSAS_LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
RSAS_LOG_FORMAT=json  # json or console

# API Configuration
RSAS_API_HOST=0.0.0.0
RSAS_API_PORT=8000
RSAS_API_WORKERS=4

# Pipeline Configuration
RSAS_PIPELINE_MAX_CONCURRENT_RESUMES=10
RSAS_PIPELINE_CHECKPOINT_INTERVAL=10

# OpenAI Model Configuration
RSAS_OPENAI_MODEL=gpt-5.1
RSAS_OPENAI_REASONING_EFFORT=high
RSAS_OPENAI_TIMEOUT=60
RSAS_OPENAI_MAX_RETRIES=3

# Storage Configuration
RSAS_STORAGE_TYPE=sqlite
RSAS_STORAGE_ECHO=false

# Observability
RSAS_OBSERVABILITY_TRACING_ENABLED=true
RSAS_OBSERVABILITY_METRICS_ENABLED=true

# PII Configuration
RSAS_PII_REDACT=false
RSAS_PII_ANONYMIZE=false

# Testing
RSAS_TESTING_TEST_MODE=false
RSAS_TESTING_MOCK_OPENAI=false
